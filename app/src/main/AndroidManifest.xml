<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.random.ducksanddragons" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.random.ducksanddragons.GameCasualActivity"
            android:parentActivityName="com.example.random.ducksanddragons.MainActivity"
            android:screenOrientation="sensorPortrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.random.ducksanddragons.MainActivity" />
        </activity>
    </application>

</manifest>
